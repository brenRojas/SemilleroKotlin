<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_umbrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ise_umbrella_150"
        android:layout_gravity="center_vertical|center_horizontal"
        />

    <ImageView
        android:id="@+id/img_beedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ise_bedtime_150"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_mouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/ise_mouse_150"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/btn_anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_text_anterior"
            android:layout_marginEnd="10dp"
            ></Button>

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_text_siguiente"/>

    </LinearLayout>

</FrameLayout>