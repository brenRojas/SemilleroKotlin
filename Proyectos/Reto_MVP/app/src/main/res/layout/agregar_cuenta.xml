<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tituloAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Cuenta"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_tipoCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Cuenta"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tituloAdd"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_tipoCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Débito / Crédito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tipoCuenta"/>

    <TextView
        android:id="@+id/txt_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_tipoCuenta"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="$ 00.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_saldo"/>


</androidx.constraintlayout.widget.ConstraintLayout>