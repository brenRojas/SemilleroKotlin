<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Dialogo"
        android:onClick="llamarEventoFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnFragmentUno"
            android:text="@string/f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambiarFragment"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnFragmentDos"
            android:text="@string/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="cambiarFragment"
            />

        <Button
            android:id="@+id/btnFragmentTres"
            android:text="@string/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambiarFragment"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </FrameLayout>

</LinearLayout>