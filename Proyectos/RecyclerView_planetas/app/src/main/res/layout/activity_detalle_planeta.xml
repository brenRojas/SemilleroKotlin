<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetallePlanetaActivity">

    <ImageView
        android:id="@+id/imgPlaneta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ise_sol_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtPlaneta"
        android:layout_width="0dp"
        android:text="Titulo"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPlaneta"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:text="Descripcion"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPlaneta"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>