<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgPlaneta"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/logo"/>

    <TextView
        android:id="@+id/txtPlaneta"
        android:layout_width="0dp"
        android:text="Planeta"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgPlaneta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_VerDetallePlaneta"
        android:layout_width="0dp"
        android:text="Ver detalle"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txtPlaneta"
        app:layout_constraintEnd_toEndOf="@id/txtPlaneta"
        app:layout_constraintBottom_toBottomOf="@id/imgPlaneta"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>